{% extends 'layout.html.twig' %}

{% block stylesheet %}
    <link rel="stylesheet" href="/assets/css/user.css">
{% endblock %}

{% block title %}Contact{% endblock %}

{% block content %}
    <main>
        <h1 class="titre">Contactez-nous</h1>
        <div class="contactez-nous">
            <br>
            <p>Un problème, une question, envie de nous poser une question ?</p>
            <form action="/page-traitement-donnees" method="post">
            <div>
                <label for="nom">Votre nom</label>
                <input type="text" id="nom" name="nom" placeholder="" required>
            </div>
            <div>
                <label for="email">Votre e-mail</label>
                <input type="email" id="email" name="email" placeholder="" required>
            </div>
            <div>
                <label for="sujet">Quel est le sujet de votre message ?</label>
                <select name="sujet" id="sujet" required>
                    <option value="" disabled selected hidden></option>
                    <option value="probleme-compte">Problème avec mon compte</option>
                    <option value="question-produit">Question à propos d’un produit</option>
                    <option value="suivi-commande">Suivi de ma commande</option>
                    <option value="autre">Autre...</option>
                </select>
            </div>
            <div>
                <label for="message">Votre message</label>
                <textarea id="message" name="message" placeholder="" required></textarea>
            </div>
            <div>
                <button type="submit">Envoyer mon message</button>
            </div>
            </form>
        </div>
        <h1 class="titre">Localisation</h1>
        <div class="carte">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2637.8739922257782!2d7.7030318768409165!3d48.61225521799594!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4796c96d34025333%3A0x4fefbe61ce54f79a!2sWild%20Code%20School%20-%20Formations%20Tech%20intensives!5e0!3m2!1sfr!2sfr!4v1681554541438!5m2!1sfr!2sfr" style="border:0;width:60vw;height:460px;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div> 
    </main>   
{% endblock %}



