{% extends 'layout.html.twig' %}

{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/bouquets.css">
{% endblock %}
{% block title %}Composez votre bouquet
{% endblock %}
{% block content %}
	<main>
		{% set total = 0 %}
		<div class="container-fluid">
			<div class="row">
				<div class="col-md-8">
					<h2>Nos fleurs</h2>
					<div class="row">
						{% for flower in flowers %}
							<div class="col-md-4 mb-3">
								<div class="card">
									<div class="bg-image hover-zoom ripple ripple-surface ripple-surface-light" data-mdb-ripple-color="light">
										<img src="{{flower.filename}}" class="w-100 cardImage"/>
										<a href="">
											<div class="hover-overlay">
												<div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
											</div>
										</a>
									</div>
									<div class="card-body">
										<a href="" class="text-reset">
											<h5 class="card-title mb-3 cardTitle">{{flower.name}}</h5>
										</a>
										<h6 class="mb-3 ms-5 cardPrice">{{flower.price}}€
											<a href="?add_to_cart={{ flower.Products_idProducts }}" class="cartCard">
												<i class="fas fa-shopping-cart"></i>
											</a>
										</h6>
									</div>
								</div>
							</div>
						{% endfor %}
					</div>
				</div>
				<div class="col-md-4">
					<h2>Panier</h2>
					<ul class="list-group">
						<li class="list-group-item d-flex justify-content-between align-items-center">
							<span>Article</span>
							<span>Quantité</span>
							<span>Prix</span>
							<span>Suppr</span>
						</li>
					</li>
					{% for item in cart %}
						{% set total = total + (item.price * item.quantity) %}
						<li class="list-group-item d-flex justify-content-between align-items-center">
							<span>{{item.name}}</span>
							<span>{{item.quantity}}</span>
							<span>{{item.price * item.quantity}}€</span>
							<span class="badge badge-pill">
								<div class="col-md-1 col-lg-1 col-xl-1 text-end">
									<a href="/cart/clearProduct?productId={{ item.id }}" class="text-muted">
										<i class="fas fa-times"></i>
									</a>
								</div>
							</li>
						</li>
					</span>
				</li>
			{% endfor %}
		</ul>
		<p>Total :
			{{total}}
			€</p>
		<a href="/cart" class="btn btn-primary">
			<i class="fa fa-shopping-cart"></i>
			Voir mon panier</a>
	</div>
</div></div></main>{% endblock %}
