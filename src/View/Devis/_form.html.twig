            </div>
            <div  class="form-outline">
                <input name="text" type="text" id="typeText" class="form-control" required="required"/>
                <label name="text" class="form-label" for="typeText" >Saisir Texte :</label>
                </div>
                    <label for="email">Adresse e-mail :</label>
                    <input type="email" id="email" name="email"><br>

            <button type="submit" class="btn btn-success btn-rounded">Envoyer</button>
        </div>
        </form>  
    </main>
</section>

