                <option value="pure">Pur</option>
                <option value="jovial">Jovial</option>
            </select>
            <div class="select">
                <input name="date" class="form-input" type="date" required="required"> Date :</input>
                <input name="budget" class="form-input" aria-label="Default select example" type="number" required="required"> Saisir le budget :</input>
            </div> 
            <div  class="form-outline">
                <input name="adresse" type="text" id="typeText" class="form-control" required="required"/>
