{% extends 'layout.html.twig' %}

{% block content %}
    <h1>{{ product.name }}</h1>
        <table class="table align-middle mb-0 bg-white">
  <thead class="bg-light">
    <tr>
        <th>Image</th>
        <th>Id</th>
        <th>Nom</th>
        <th>Catégorie</th>
        <th>Inventaire</th>
        <th>Niveau de stock</th>
        <th>Prix</th>
        <th>Modifier</th>
    </tr>
  </thead>
  <tbody>
<tr>

               <td>
        <div class="d-flex align-items-center">
           <img
              src="\{{ product.filename }}"
              alt=""
              style="width: auto; height: 200px"
              ;>
        </div>
      </td>
              <a href="/products/show?id={{ id }}">
                <td class="fw-normal mb-1">{{ id }}</td>
                <td class="fw-normal mb-1">{{ product.name }}</td>
                <td class="fw-normal mb-1">{{ product.category }}</td>
                <td class="fw-normal mb-1">{{ product.inventory }}</td>
                {% if product.inventory > 5 %}
                    <td><span class="badge badge-success rounded-pill d-inline">En stock</span></td>
                {% endif %}
                {% if product.inventory > 0 and product.inventory <= 5 %}
                    <td><span class="badge badge-primary rounded-pill d-inline">Stock bas</span></td>
                {% endif %}
                {% if product.inventory == 0 %}
                    <td><span class="badge badge-warning rounded-pill d-inline">Rupture</span></td>
                {% endif %}
                <td class="fw-normal mb-1">{{ product.price }}€</td>
                <td>
                <a href="/products/edit?id={{ id }}">
                <button
                type="button"
                class="btn btn-link btn-rounded btn-sm fw-bold"
                data-mdb-ripple-color="dark"
                >Edit</button></a></td>
            </tr>
             </tbody>

    <form action="/products/delete" method="POST">
        <input type="hidden" name="id" value="{{ product.id }}">
        <button>Delete</button>
    </form>
    <a href="/products">Back</a>

{% endblock %}
{% block footer %}
    {% endblock footer %}